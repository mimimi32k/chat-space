.side_bloc
  .side_nav
    .side_nav__box
      .side_nav__box__username
        = current_user.name
      .side_nav__box__menu
        .side_nav__box__menu__new-group
          = link_to new_group_path do
            = fa_icon "edit", class: 'icon'
      .side_nav__box__menu__edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon "cog", class: 'icon'
  .side_body
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__message
            = group.show_last_message